pipeline {
    agent any 
    stages {
        stage('Verify Branch'){
            steps{
             echo "$GIT_BRANCH"
            }
        }
        stage('Docker build'){
            steps{
            sh 'docker images -a'
            sh """
            cd azure-vote/
            docker  build -t jenkins-pipeline .
            docker images -a
            cd ..
            """
             }
        stage('start test app'){
            steps{
                pwsh(script: '''
                docker-compose up 
                ./scripts/test_container.ps1
                ''')
            }
            post{
                success{
                    echo "App Started succefully"
                }
                failure{
                    echo "App failed to start :("
                }
            }
        }
        stage('stop  test' app){
            steps{
                pwsh(script:'''
                docker-compose down
                ''')
            }
        }
        }
    }

}
